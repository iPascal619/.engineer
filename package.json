{
  "name": "ipascal-portfolio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/landing"
  ],
  "homepage": "https://ipascal-portfolio.dev",
  "description": "Pascal Kelechi's portfolio website built with Vue 3 + Vite",
  "repository": "https://github.com/iPascal619/portfolio",
  "bugs": "https://github.com/iPascal619/portfolio/issues",
  "author": "Pascal Kelechi <kelexypascal@gmail.com> (https://linkedin.com/in/pascal-kelechi)",
  "scripts": {
    "dev": "cd apps/landing && npm run dev",
    "dev:landing": "cd apps/landing && npm run dev",
    "build": "cd apps/landing && npm run build",
    "build:landing": "cd apps/landing && npm run build",
    "preview": "cd apps/landing && npm run preview",
    "preview:landing": "cd apps/landing && npm run preview",
    "lint": "cd apps/landing && npm run lint",
    "lint:landing": "cd apps/landing && npm run lint",
    "type-check": "cd apps/landing && npm run type-check",
    "type-check:landing": "cd apps/landing && npm run type-check",
    "clean": "rimraf apps/*/dist",
    "install:all": "npm install && cd apps/landing && npm install && cd ../../packages/ui && npm install"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21"
  }
}
